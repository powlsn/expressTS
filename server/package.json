{
  "name": "expressts",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc",
    "postbuild": "copyfiles ormconfig.js build",
    "start:test": "cross-env NODE_ENV=test npm run start-ts",
    "start:dev": "cross-env NODE_ENV=development npm run start-ts",
    "start-build": "npm run build && node build/server.js",
    "start-ts": "nodemon -e ts -w ./ -x ts-node server.ts",
    "test": "jest",
    "migrations:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -c test -n",
    "migrations:run": "ts-node ./node_modules/typeorm/cli.js migration:run -c",
    "migrations:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -c"
  },
  "author": "Elmar Bruckmann",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "method-override": "^3.0.0",
    "pg": "^7.14.0",
    "pug": "^2.0.4",
    "typeorm": "^0.2.20"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/method-override": "0.0.31",
    "copyfiles": "^2.1.1",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
